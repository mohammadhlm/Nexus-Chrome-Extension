{
  "manifest_version": 3,
  "name": "Nexus Node Keeper",
  "version": "1.0",
  "description": "Keeps the Nexus node online by periodically pinging https://app.nexus.xyz/",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
